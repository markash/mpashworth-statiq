@model FromZeroToHero.Models.ContentTypes.Hero;

            <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
            <div class="sm:text-center lg:text-left">
                <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                    <span class="xl:inline">@Model.Headline</span>
                    <span class="text-indigo-600 xl:inline">@Model.Subheading</span>
                </h1>
                <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                    @Model.Summary
                </p>
                <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                    @if (Model.CtaUrl != null && Model.CtaLabel != null)
                    {
                    <div class="rounded-md shadow">
                    <a href="@Model.CtaUrl" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10">
                        @Model.CtaLabel
                    </a>
                    </div>
                    }
                    @if (Model.SecondaryCtaUrl != null && Model.SecondaryCtaLabel != null && Model.SecondaryCtaLabel != "")
                    {
                    <div class="mt-3 sm:mt-0 sm:ml-3">
                    <a href="@Model.SecondaryCtaUrl" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:py-4 md:text-lg md:px-10">
                        @Model.SecondaryCtaLabel
                    </a>
                    </div>
                    }
                </div>
            </div>
            </main>